<div class="row my-3 mx-auto">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <h2>会員情報編集</h2>
    <% if @customer.errors.any? %>
      <div class="bg-light">
        <%= @customer.errors.count %>件のエラーが発生しました
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      
    <div>会員ID</div>
    <div class="border rounded border-dark px-3 py-2 bg-light mt-1"><%= @customer.id %></div>
    <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <div class="form-group mt-3">
        <%= f.label "氏名" %>
        <%= f.text_field :last_name, class: "form-control border-dark" %>
        <%= f.text_field :first_name, class: "form-control border-dark mt-2" %>
      </div>
      
      <div class="form-group mt-3">
        <%= f.label "フリガナ" %>
        <%= f.text_field :last_name_kana, class: "form-control border-dark" %>
        <%= f.text_field :first_name_kana, class: "form-control border-dark mt-2" %>
      </div>
      
      <div class="form-group mt-3">
        <%= f.label "電話番号" %>
        <%= f.text_field :telephone_number, class: "form-control border-dark" %>
      </div>
      
      <div class="form-group mt-3">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, class: "form-control border-dark" %>
      </div>
      
      <div class="form-group mt-3">
        <%= f.label "ステータス" %>
        <div class="d-flex justify-content-center">
          <div class="mr-3">
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "有効" %>
          </div>
          <div>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "退会" %>
          </div>
        </div>
      </div>
        
      <%= f.submit '変更する', class: 'btn btn-outline-primary btn-block mt-3' %>
    <% end %>
  </div>
</div>