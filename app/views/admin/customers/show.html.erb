<%= @customer.last_name + @customer.first_name + "様"%>

<p>会員ID</p>
<%= @customer.id %>
<p>氏名</p>
<%= @customer.last_name %>
<%= @customer.first_name %>

<p>フリガナ</p>
<%= @customer.last_name_kana %>
<%= @customer.first_name_kana %>

<p>電話番号</p>
<%= @customer.telephone_number %>

<p>メールアドレス</p>
<%= @customer.email %>

<p>ステータス</p>
<%= @customer.is_active ? '有効' : '退会' %><br>

<%= link_to "編集", edit_admin_customer_path(@customer.id) %>

<h2>ポイント</h2>
総獲得数：
<%= @points.count %>Pt
<% if @points.count > 0 %>
  直近獲得日:<%= l @latest_point.created_at, format: :long %>
<% end %>
<%= form_with model: @point, url: admin_points_path do |f| %>
  <%= f.hidden_field :customer_id, value: @customer.id %>
  <%= f.submit 'ポイント付与' %>
<% end %>

<h2>クーポン</h2>
<p>総獲得数</p><%= @coupons.count %>枚
<% if @coupons.count > 0 %>
  直近獲得日:<%= l @latest_coupon.created_at, format: :long %>
  <%= form_with model: @coupon, url: admin_coupon_path do |f| %>
    <%= f.submit 'クーポン利用' %>
  <% end %>
  <%= link_to "クーポン一覧", admin_customer_coupons_path(@customer) %>
<% end %>