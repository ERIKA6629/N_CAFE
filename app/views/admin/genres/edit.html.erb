<div class="text-white p-2", style="background-color: midnightblue;">ジャンル編集</div>

<div class="row my-3 mx-auto">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    
    <% if @genre.errors.any? %>
      <div class="bg-light p-2 mb-3">
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name, class: "form-control border-dark" %>
      </div>
      <div class="form-group">
        <%= f.label "画像" %>
        <%= f.file_field :image, accept: "image/*", class: "form-control border-dark" %>
      </div>
      <%= f.submit '編集', class: 'btn btn-outline-primary btn-block' %>
      <div class="d-flex justify-content-end mt-3">
        <%= link_to '削除', admin_genre_path(@genre.id), method: :delete, "data-confirm" => "本当に削除しますか?", class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>