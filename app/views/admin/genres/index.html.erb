<div class="row my-3 mx-auto">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <h2>ジャンル追加</h2>
      <% if @genre.errors.any? %>
        <div class="bg-light">
          <%= @genre.errors.count %>件のエラーが発生しました
          <ul>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label "ジャンル名" %>
          <%= f.text_field :name, class: "form-control border-dark" %>
        </div>
        <div class="form-group">
          <%= f.label "画像" %>
          <%= f.file_field :image, accept: "image/*", class: "form-control border-dark" %>
        </div>
        <%= f.submit '新規追加', class: 'btn btn-outline-success btn-block' %>
      <% end %>
      
    <div class="h2 mt-3">ジャンル一覧</div>
      <% @genres.each do |genre| %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div><%= image_tag genre.image.variant(resize: "150x150").processed %></div>
          <div><%= genre.name %></div>
          <div><%= link_to "編集", edit_admin_genre_path(genre.id), class: 'btn btn-outline-primary' %></div>
        </div>
      <% end %>
  </div>
</div>