<h2>ジャンル追加</h2>
  <%= form_with model: Genre.new, url: admin_genres_path, method: :post do |f| %>
    <p>ジャンル名</p>
    <%= f.text_field :name %>
    <p>画像</p>
    <%= f.file_field :image, accept: "image/*" %>
    <%= f.submit '新規追加' %>
  <% end %>
  
<h2>ジャンル一覧</h2>
  <% @genres.each do |genre| %>
    <%= image_tag genre.image.variant(resize: "150x150").processed %>
    <%= genre.name %>
    <%= link_to "編集", edit_admin_genre_path(genre.id) %><br>
  <% end %>