<div class="text-white p-2 style_color">メニュー編集</div>

<div class="row my-3 mx-auto">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <% if @menu.errors.any? %>
      <div class="bg-light">
        <%= @menu.errors.count %>件のエラーが発生しました
        <ul>
          <% @menu.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @menu, url: admin_menu_path, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, accept: "image/*", class: "form-control border-dark" %>
      </div>
      <div class="form-group">
        <%= f.label :genre_id %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name,{}, { class: "form-control border-dark" } %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control border-dark" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control border-dark",rows: "5" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: "form-control border-dark" %>
        <div class="text-right">円</div>
      </div>
      <%= f.submit '編集を保存', class: 'btn btn-outline-primary btn-block' %>
    <% end %>
  </div>
</div>