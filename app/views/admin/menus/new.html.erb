<% if @menu.errors.any? %>
  <%= @menu.errors.count %>件のエラーが発生しました
  <ul>
    <% @menu.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>メニュー新規登録</h2>

<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <%= form_with model: @menu, url: admin_menus_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label "メニュー画像" %>
        <%= f.file_field :image, accept: "image/*", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label "ジャンル" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "---select---" }, { class: "form-control" } %>
      </div>
      
      <div class="form-group">
        <%= f.label "メニュー名" %>
        <%= f.text_field :name, class: "form-control", placeholder: "メニュは20文字まで" %>
      </div>
      
      <div class="form-group">
        <%= f.label "メニュー説明" %>
        <%= f.text_area :introduction, class: "form-control", rows: 5 %>
      </div>
  
      <p>税抜価格</p>
      <%= f.text_field :price %>円
      
      <div class="form-group">
        <%= f.submit '新規追加', class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
