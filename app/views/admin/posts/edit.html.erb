<div class="text-white p-2", style="background-color: midnightblue;">投稿編集</div>
<div class="row my-3 mx-auto">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <% if @edit_post.errors.any? %>
      <div class="bg-light">
        <%= @edit_post.errors.count %>件のエラーが発生しました
        <ul>
          <% @edit_post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= form_with model: @edit_post, url: admin_post_path, method: :patch do |f| %>
      <div class="form-group mt-3">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control border-dark" %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control border-dark", rows: "5" %>
      </div>
      <%= f.submit '編集を保存', class: 'btn btn-outline-primary btn-block mt-3' %>
    <% end %>
  </div>
</div>