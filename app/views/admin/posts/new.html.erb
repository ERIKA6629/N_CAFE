<div class="text-white p-2 mt-3", style="background-color: midnightblue;">新規投稿</div>
<div class="row my-3 mx-auto">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <%= link_to '投稿一覧', admin_posts_path, class: 'btn btn-outline-warning btn-block' %>
    <% if @new_post.errors.any? %>
    <div class="bg-light p-2 mt-3">
      <%= @new_post.errors.count %>件のエラーが発生しました
      <ul>
        <% @new_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <%= form_with model: @new_post, url: admin_posts_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label "画像" %>
        <%= f.file_field :image, accept: "image/*", class: "form-control border-dark" %>
      </div>
      <div class="form-group">
        <%= f.label "タイトル" %>
        <%= f.text_field :title, class: "form-control border-dark" %>
      </div>
      <div class="form-group">
        <%= f.label "本文" %>
        <%= f.text_area :content, class: "form-control border-dark", rows: "5" %>
      </div>
      <%= f.submit '投稿', class: 'btn btn-outline-primary btn-block mt-5' %>
    <% end %>
  </div>
</div>
