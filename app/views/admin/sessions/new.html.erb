<div class="row mx-auto my-3">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 h5">
    <h2>管理者ログイン</h2>
    <%#= form_with model: @customer, url: information_path(@customer.id), method: :patch do |f| %>
    <%= form_with model: @admin, url: session_path(resource_name) do |f| %>
      <div class="field mt-3">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    
      <div class="form-group mt-3">
        <%= f.label "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    
      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->
    
      <div class="form-group mt-3">
        <%= f.submit "ログイン", class: 'btn btn-outline-primary btn-block' %>
      </div>
    <% end %>
    
    <!--<%= render "admin/shared/links" %>-->
  </div>
</div>
