<div class="row mt-3 mb-3 mx-auto">
  <div class="col-md-5 col-lg-5">
    <div><%= image_tag @menu.image.variant(resize: "400x400").processed, class: "img-fluid" %></div>
  </div>
  <div class="col-md-7 col-lg-7">
    <div class="row row-cols-md-6 row-cols-lg-5">
      <div class="col-md-5 col-lg-4 h5 text-center text-md-left mt-3">メニュー名</div>
      <div class="col-md-7 col-lg-8 h5 text-center text-md-left mt-3"><%= @menu.name %></div>

      <div class="col-md-5 col-lg-4 h5 text-center text-md-left mt-3">メニュー説明</div>
      <div class="col-md-7 col-lg-8 h5 text-center text-md-left mt-3"><%= safe_join(@menu.introduction.split("\n"),tag(:br)) %></div>

      <div class="col-md-5 col-lg-4 h5 text-center text-md-left mt-3">税込価格</div>
      <div class="col-md-7 col-lg-8 h5 text-center text-md-left mt-3"><%= @menu.include_tax %>円</div>
    </div>
  </div>
  <div class="mx-auto mt-3"><%= link_to "一覧へ戻る", menus_path, class: "btn btn-outline-warning" %></div>
</div>