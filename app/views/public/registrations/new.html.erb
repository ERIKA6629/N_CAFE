<div class="text-white p-2", style="background-color: midnightblue;">会員登録</div>
<div class="row my-3 mx-auto">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
      <div class="mt-3"><%= render "public/shared/error_messages", resource: resource %></div>
      
      <div class="form-group mt-3">
        <%= f.label "氏名" %>
        <div class="row">
          <div class="col-md-6 col-lg-6">
            <%= f.text_field :last_name, autofocus: true, placeholder: "山田", class: "form-control" %>
          </div>
          <div class="col-md-6 col-lg-6">
            <%= f.text_field :first_name, placeholder: "太郎", class: "form-control" %>
          </div>
        </div>
      </div>
      
      <div class="form-group mt-3d">
        <%= f.label "フリガナ" %>
        <div class="row">
          <div class="col-md-6 col-lg-6">
            <%= f.text_field :last_name_kana, placeholder: "ヤマダ", class: "form-control" %>
          </div>
          <div class="col-md-6 col-lg-6">
            <%= f.text_field :first_name_kana, placeholder: "タロウ", class: "form-control" %>
          </div>
      </div>
      
      <div class="form-group mt-3">
        <%= f.label "電話番号（ハイフンなし）" %>
        <%= f.text_field :telephone_number, placeholder: "08011112222", class: "form-control" %>
      </div>
      
      <div class="form-group mt-3">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "test@example.com", class: "form-control" %>
      </div>
    
      <div class="form-group mt-3">
        <%= f.label "パスワード（6文字以上）" %>
        <!--<% if @minimum_password_length %>-->
        <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
        <!--<% end %>-->
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    
      <div class="form-group mt-3">
        <%= f.label "パスワード（確認用）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    
      <div class="form-group mt-3">
        <%= f.submit "登録", class: 'btn btn-outline-success btn-block' %>
      </div>
    <% end %>
    
    <!--<%= render "public/shared/links" %>-->
  </div>
</div>
