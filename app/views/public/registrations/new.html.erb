<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label "氏名" %>
    <%= f.text_field :last_name, autofocus: true, placeholder: "山田"%>
    <%= f.text_field :first_name, placeholder: "太郎"%>
  </div>
  
  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.text_field :last_name_kana, placeholder: "ヤマダ"%>
    <%= f.text_field :first_name_kana, placeholder: "タロウ"%>
  </div>
  
  <div class="field">
    <%= f.label "電話番号（ハイフンなし）" %>
    <%= f.text_field :telephone_number, placeholder: "08011112222"%>
  </div>
  
  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "test@example.com" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（6文字以上）" %>
    <!--<% if @minimum_password_length %>-->
    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
    <!--<% end %>-->
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "LOG IN" %>
  </div>
<% end %>

