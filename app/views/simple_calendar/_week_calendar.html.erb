<div class="simple-calendar">
  <div class="calendar-heading">
    <span class="calendar-title">
      <%= Date.today.strftime("%Y年%m月") %>
      <%#= t('simple_calendar.week', default: 'Week') %>
      <%#= calendar.week_number %>
      <%# if calendar.number_of_weeks > 1 %>
        <%# - %> <%#= calendar.end_week %>
      <%# end %>
    </span>

    <nav>
      <%#= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
      <%= link_to t('simple_calendar.today', default: '今週'), calendar.url_for_today_view %>
      <%= link_to t('simple_calendar.next', default: '次週'), calendar.url_for_next_view %>
    </nav>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>時間</th>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <td></td>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        </tr>
        <% @reservation_times.each do |reservation_time| %>
          <tr>
            <td><%= reservation_time.start_at + "〜" %></td>
            <% week.each do |day| %>
              <% if day.wday == @non_business_day && reservation_time.start_at == '10:00' %>
                  <td rowspan= "16"><%= '定休日' %></td>
              <% elsif day.wday != @non_business_day %>
                <% reservation = @reservations.display_reservation(@seat.id, reservation_time.id, day) %>
                <% if reservation %>
                  <td><%= '×︎' %></td>
                <% elsif reservation.nil? && for_showing_reservations(day, reservation_time.start_at) %>
                  <td><%= '◯' %></td>
                <% else %>
                  <td><%= ' ' %></td>
                <% end %>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
